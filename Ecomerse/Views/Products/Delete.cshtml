@model Ecomerse.Models.Entities.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 my-2">Name</dt>
        <dd class="col-sm-10 my-1">@Model.Name</dd>

        <dt class="col-sm-2 my-2">Price</dt>
        <dd class="col-sm-10 my-1">@Model.Price</dd>

        <dt class="col-sm-2 my-2">Description</dt>
        <dd class="col-sm-10 my-1">@Model.Description</dd>

        <dt class="col-sm-2 my-2">Category</dt>
        <dd class="col-sm-10 my-1">@Model.Category</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger my-2" /> |
        <a asp-action="Index" class="btn btn-secondary my-2">Back to List</a>
    </form>
</div>
